@model IEnumerable<WebAppBoFv3.Models.Company>
@{
    ViewData["Title"] = "IndexComp";
}
<h1>Все зарегистрированные организации</h1><br />
    
<div class="admin_buttons">
    <a class="floating-button" asp-area="" asp-controller="CompanyTb" asp-action="CreateComp">Новая компания</a>
    <a class="floating-button" asp-area="" asp-controller="CompanyTb" asp-action="Autofilling">Тестовая компания</a>
</div><br/>
    <table class="table">
        <thead>
            <tr>
                <th>Лого</th>
                <th>Название </th>
                <th>Адресс оргназиции @*в БД Region*@</th>
                <th>ИНН </th>
                <th>Номер телефона</th>
                <th>Е-mail</th>
                <th>Информация о компании </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {<tr>
                <td>@if (item.Image != null)
                        {
                            <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                        }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Org_name)</td>
                <td>@Html.DisplayFor(modelItem => item.Region)</td>
                <td>@Html.DisplayFor(modelItem => item.INN)</td>
                <td>@Html.DisplayFor(modelItem => item.Org_phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Org_email)</td>
                <td>@Html.DisplayFor(modelItem => item.Info)</td>
                    <td width="100">
                    <div><a asp-controller="CompanyTb" asp-action="EditComp" asp-route-id="@item.Id">Редактировать</a></div>
                    <div><a asp-controller="CompanyTb" asp-action="DetailsComp" asp-route-id="@item.Id">Подробнее</a></div>
                    <div><a asp-controller="CompanyTb" asp-action="DeleteComp" asp-route-id="@item.Id">Удалить</a></div>
                    </td>
             </tr>
            }
        </tbody>
    </table>
