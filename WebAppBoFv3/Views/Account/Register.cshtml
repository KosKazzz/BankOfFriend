@model WebAppBoFv3.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2>Регистрация</h2>
<div class="registrationform forall">
<form class="bodyform forall" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation forall" asp-validation-summary="ModelOnly"></div>
    
            <label for="inp" class="inp forall" asp-for="Email">
            <input type="text" asp-for="Email" id="inp" placeholder="&nbsp;" />
            <span class="label" asp-validation-for="Email">Введите Email</span>
            <span class="focus-bg"></span>
            </label>
        
            <label for="inp" class="inp forall" asp-for="Password">
            <input asp-for="Password" id="inp" placeholder="&nbsp;"/>
            <span class="label" asp-validation-for="Password">Введите пароль</span>
            <span class="focus-bg"></span>
            </label>
        
            <label for="inp" class="inp forall" asp-for="ConfirmPassword">
            <input asp-for="ConfirmPassword" id="inp" placeholder="&nbsp;"/>
            <span class="label" asp-validation-for="ConfirmPassword">Повторите пароль</span>
            <span class="focus-bg"></span>
            </label>
        <div class="button">
            <input class="regbutton" type="submit" value="Зрегистрироваться" />
        </div>
</form>
</div>