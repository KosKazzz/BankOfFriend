@model WebAppBoFv3.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="css/site.css">
</head>

<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>

<div class="registrationform forall">
<form  class="bodyform forall" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
   
       <label for="inp" class="inp forall" asp-for="Email">
        <input type="text" asp-for="Email" id="inp" placeholder="&nbsp;" />
        <span class="label" asp-validation-for="Email">Введите Email</span>
        <span class="focus-bg"></span>
       </label>
       
       <label for="inp" class="inp forall" asp-for="Password">
        <input asp-for="Password" id="inp" placeholder="&nbsp;"/>
        <span class="label" asp-validation-for="Password">Введите пароль</span>
        <span class="focus-bg"></span>
       </label>
       
       <div class="button">
        <input class="regbutton" type="submit" value="Войти" />
    </div>
        
    
</form>
</div>
